<img class="img-fluid rounded mx-auto d-block" src="/assets/img/burger.png" alt="Burger Animation">
<div class="container.fluid">
	<div class="row no-gutters text-center">
		<div class="col-sm-12 col-md-4">
			<ul>
				{{#each burgers}}
					{{#unless devoured}}
						{{> burgers/burger-block devour=true}}
					{{/unless}}
				{{/each}}
			</ul>
		</div>
		<div class="col-sm-12 col-md-4">
			<form>
				<div>
					<h1>Eat-Da-Burger!</h1>
					<input type="text" id="new-burger" name="burger_name">
				</div>

				<button type="submit" id="submit" class="btn btn-primary">Submit</button>
				<p>Enter a burger you want to eat and then click the "Submit" button</p>
			</form>
		</div>
		<div class="col-sm-12 col-md-4">
			<ul>
				{{#each burgers}}
					{{#if devoured}}
						{{> burgers/burger-block devour=false}}
					{{/if}}
				{{/each}}
			</ul>
		</div>
	</div>
</div>